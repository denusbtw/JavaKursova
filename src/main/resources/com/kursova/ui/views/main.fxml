<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.kursova.controller.MainController"
        stylesheets="@/com/kursova/ui/styles/mainStyle.css"
        prefWidth="1100"
        prefHeight="500"
        alignment="CENTER"
        spacing="20"
>
    <Label text="Менеджер путівок" styleClass="main-title"/>

    <Button
            fx:id="showAllToursButton"
            onAction="#handleShowAllTours"
            text="Усі путівки"
            maxWidth="200"
    />
    <Button
            fx:id="showFavouriteToursButton"
            onAction="#handleShowFavouriteTours"
            text="Вподобані путівки"
            maxWidth="200"
    />
</VBox>
